{
    "compilerOptions": {
      "target": "ES2022",                  // Modern JavaScript features
      "module": "CommonJS",                 // Use CommonJS for Node.js
      "rootDir": "src",                     // Source directory
      "outDir": "dist",                     // Output directory for compiled files
      "strict": true,                        // Enable strict type-checking
      "esModuleInterop": true,               // Allow default imports from CommonJS
      "forceConsistentCasingInFileNames": true, // Enforce consistent casing
      "skipLibCheck": true,                  // Skip checking declaration files
      "resolveJsonModule": true,             // Allow importing JSON files
      "noImplicitAny": true,                 // Prevent implicit `any` types
      "strictNullChecks": true,              // Enable null safety
      "strictPropertyInitialization": true,  // Ensure properties are initialized
      "moduleResolution": "Node",            // Resolve modules in Node.js style
      "allowSyntheticDefaultImports": true,  // Support default imports
      "noUnusedLocals": true,                // Warn on unused local variables
      "noUnusedParameters": true,            // Warn on unused parameters
      "noFallthroughCasesInSwitch": true,    // Prevent fallthrough in switch statements
      "noImplicitReturns": true              // Ensure all code paths return values
    },
    "include": ["src"],                      // Include all TypeScript files in src
    "exclude": ["node_modules", "dist"]      // Exclude build artifacts
  }
  